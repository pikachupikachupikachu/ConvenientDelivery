<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LetterIndexTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">@dimen/side_letter_bar_width</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <!--水波纹效果-->
    <style name="rippleStyle">
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!--我的item样式-->
    <style name="ItemExample" parent="rippleStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableRight">@drawable/ic_keyboard_arrow_right_grey_500_24dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <!-- ToolBar菜单样式 -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@color/dark</item> <!--  敲定颜色-->
        <item name="android:textSize">18sp</item> <!--  搞掂字体大小-->
    </style>

    <style name="hintAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="EditTextTheme">

        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/bodyLarge</item>

    </style>



    <style name="style_smile">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="style_text" parent="style_smile">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="style_text_small" parent="style_smile">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="style_text_middle" parent="style_smile">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="style_text_large" parent="style_smile">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="style_text_black" parent="style_text">
        <item name="android:textColor">@color/base_color_text_black</item>
    </style>

    <style name="style_text_white" parent="style_text">
        <item name="android:textColor">@color/base_color_text_white</item>
    </style>

    <style name="style_text_gray_small" parent="style_text_small">
        <item name="android:textColor">@color/color_99</item>
    </style>

    <style name="style_text_white_small" parent="style_text_small">
        <item name="android:textColor">@color/base_color_text_white</item>
    </style>

    <style name="style_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_title</item>
    </style>

    <style name="style_button_logout" parent="style_text_white">
        <item name="android:background">@drawable/btn_logout_selector</item>
    </style>

    <style name="style_text_1e1e1e" parent="style_text">
        <item name="android:textColor">@color/color_1e1e1e</item>
    </style>

    <style name="chat_content_date_style">
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">#bfbfbf</item>
    </style>

    <style name="chat_text_name_style">
        <item name="android:textColor">#818181</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>


</resources>
